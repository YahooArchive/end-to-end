{namespace e2e.ext.ui.templates.panels.chipholder autoescape="strict"}


/**
 * Renders the chip holder.
 * @param recipientsTitle The placeholder text for the recipients field.
 * @param passphraseEncryptionLinkTitle The title for the passphrase encryption link.
 * @param passphraseEncryptionLinkTooltip The tooltip for the passphrase encryption link.
 */
{template .renderChipHolder}
  <div id="{e2e.ext.constants.ElementId.KEY_SELECT_FORM}">
    {if $passphraseEncryptionLinkTitle}
    <div class="{e2e.ext.constants.CssClass.PASSPHRASE_ENCRYPTION_LINK}"
      title="{$passphraseEncryptionLinkTooltip}">
      + {$passphraseEncryptionLinkTitle}
    </div>
    {/if}
    <div class="{e2e.ext.constants.CssClass.CHIPS}">
      <span>{$recipientsTitle}</span>
      <input type="text">
    </div>
  </div>
{/template}


/**
 * Renders a chip that represents a PGP UID or passphrase.
 * @param value The UID or passphrase to render.
 * @param opt_name The optional name to render.//@yahoo
 */
{template .renderChip}
  <div class="{e2e.ext.constants.CssClass.CHIP}">
  {if $opt_name}
    <div title="{$value}">{$opt_name}</div>
  {else}
    <div title="{$value}">{$value}</div>
  {/if}
    <img src="images/close.png">
  </div>
{/template}
