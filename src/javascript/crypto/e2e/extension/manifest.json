{
  "manifest_version": 2,
  "name": "Yahoo Mail Encrypted (alpha)",
  "description": "__MSG_extDescription__",
  "version": "0.8.1",
  "permissions": [
    "activeTab",
    "cookies",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "https://localhost:4443/*",
    "https://*.mail.yahoo.com/*"
  ],
  "optional_permissions": [
    "https://www.facebook.com/*/publickey/download"
  ],
  "background": {"scripts": ["launcher_binary.js"]},
  "options_page": "settings.html",
  "browser_action": {
    "default_title": "__MSG_extName__",
    "default_icon": "images/yahoo/icon-128.png",
    "default_popup": "prompt.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*.mail.yahoo.com/*"],
      "js": ["helper_binary.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://localhost:4443/auth/cookies"],
      "js": ["auth/yby.cookies.js"]
    }
  ],
  "icons": {
    "16": "images/yahoo/icon-16.png",
    "48": "images/yahoo/icon-48.png",
    "128": "images/yahoo/icon-128.png"
  },
  "web_accessible_resources": ["glass.html", "composeglass.html", "stubs/ymail.storm.js"],
  "default_locale": "en"
}
